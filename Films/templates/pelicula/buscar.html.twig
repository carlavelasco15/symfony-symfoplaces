{% extends 'base.html.twig' %}
{% block title %}Búsqueda de películas{% endblock %}

{% block breadcrumb %}
	{{parent()}}
    <li class="breadcrumb-item"><a href=" {{ path('pelicula_list') }}">Peliculas</a></li>
    <li class="breadcrumb-item active" aria-current="page">Buscar</li>
{% endblock %}

{%  block main %}
	{{ parent() }}
    <p>Búsqueda de películas en <b>SymfoFilms</b>.</p>

    <p>
        Indica los criterios de búsqueda en el formulario y presiona el botón <i>Buscar</i>.
        Para mostrar un listado completo, introduce el carácter % en el campo <i>Valor</i>.
    </p>

    <div class="bg-light border row align-items-center justify-content-center my-3 p-1">
    {{ form_start(formulario) }}
        <div class="row">
            <div class="col">{{ form_row(formulario.valor) }}</div>
            <div class="col">{{ form_row(formulario.campo) }}</div>
            <div class="col">{{ form_row(formulario.orden) }}</div>
            <div class="col">{{ form_row(formulario.sentido) }}</div>
            <div class="col">{{ form_row(formulario.limite) }}</div>
            <div class="col">{{ form_row(formulario.Buscar) }}</div>
            {{ form_rest(formulario) }}
        </div>
    {{ form_end(formulario) }}
    </div>

    <h3>Resultados</h3>

	{# incluye la subvista con la lista de películas #}
	{% include '/includes/lista_peliculas.html.twig'  %}

{% endblock %}
