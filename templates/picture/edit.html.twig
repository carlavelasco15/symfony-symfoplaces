{% extends 'base.html.twig' %}

{% block title %}Editar{% endblock %}

{% block main %}

    {{ parent() }}
    <p>Edición del lugar <b>{{place.title}}</b>.</p>

    <div class="bg-light border row align-items-center justify-content-center my-3 p-5">


		<div class="col-6">

            {{ form(formulario) }}

        </div>
			

    	<div class="col-6 text-center">
		<h4 class="my-2">Actual</h4>
			<figure class="my-2 p-2">
				<img class="rounded border movie-cover" style="max-width: 220px"
					alt="Carátula de {{place.title}}"
					title= "Carátula de {{place.title}}"
					src="{{asset(picture_directory~'/'~(place.picture ?? 'default.jpg'))}}">

				{% if place.picture %}
				<figcaption class="my-3 text-center">
					Borrar esta Carátula
					<a href="{{path('picture_delete_cover', {'id': place.id})}}">
						<img src="{{asset('images/buttons/delete.png')}}" height="30" width="30"
							alt="Borrar carátula" title="Borrar carátula">
					</a>
				</figcaption>
				{% endif %}
			</figure>
		<div class="text-center my-5">
                        <h4 class="my-2">Previsualización</h4>
                        <figure class="my-2 p-2">
                            <img id ="preview"
                                class="rounded border movie-cover"
                                style="max-width: 220px"
                                src="{{ asset(picture_directory~'/'~(place.picture ?? 'default.jpg')) }}">

                        </figure>

                        <script src="{{ asset('/js/previewImageModify.js') }}"></script>
                    </div>
		</div>

	</div>












    
    
