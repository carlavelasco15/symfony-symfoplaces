<div class="d-flex flex-wrap flex-row">
        {% for place in places %}
         <div class="card mx-2 my-3" style="width: 18rem;">
                        <div class="text-center my-3">
                            <a href="{{ path('place_show', {'id': place.id}) }}" ><img class="lista-cover rounded" style="max-width: 200px;" alt="Carátula de {{place.name}}" title="Carátula de {{place.name}}" src="{{asset(picture_directory~'/'~(place.getPhoto()[0].picture ?? 'default.jpg'))}}"></a>
                        </div>
                        <div class="card-body">
                             <a href="{{ path('place_show', {'id': place.id}) }}" ><h5 class="card-title">{{place.name}}</h5></a>
                            <p class="card-text">{{place.description}}</p>
                            <a href="{{ path('place_edit', {'id': place.id}) }}" class="btn btn-warning">Editar</a>
                            <a href="{{ path('place_delete', {'id': place.id}) }}" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
</div>