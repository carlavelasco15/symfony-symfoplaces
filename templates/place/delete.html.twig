{% extends 'base.html.twig' %}

{% block title %}Eliminar{% endblock %}

{% block breadcrumb %}
	{{parent()}}
    <li class="breadcrumb-item"><a href=" {{ path('place_list') }}">Lugares</a></li>
    <li class="breadcrumb-item active" aria-current="page">Eliminar {{place.name}}</li>
{% endblock %}

{% block main %}

    {{ parent() }}
    <p>Â¿Quieres eliminar el lugar <b>{{place.name}}</b>?</p>

    {{ form(formulario) }}
    

     	<div class="text-center">
		<a href="{{  path('place_list') }}">
			<img height="40" src="{{ asset('images/buttons/list.png') }}"
			alt="Lista" title="Volver al listado"></a>
		</a>
		{% if is_granted('edit', place) %}
			<a href="{{ path('place_show', {'id':place.id}) }}">
				<img height="40" src="{{ asset('images/buttons/show.png') }}"
				alt="Detalle" title="Detalle"></a>
			</a>
		{% endif %}

		{% if is_granted('edit', place) %}
			<a href="{{ path('place_edit', {'id':place.id}) }}">
				<img height="40" src="{{ asset('images/buttons/update.png') }}"
				alt="Modificar" title="Modificar"></a>
			</a>
		{% endif %}
{% endblock %}
